import numpy as np
import matplotlib.pyplot as plt

# Time array from 0 to 2Ï€ with 0.05 step
t = np.arange(0, 2 * np.pi, 0.05)

# Initialize home positions and calculate movement ranges for sin functions
home_positions = [110, 108, 140, 56, 240, 115.5, 80, 100]  # Initial home positions for servos
movement_ranges = [5, (134-82), 5, (27-85), 5, (87-144), 5, (127-73)]  # Calculated movement ranges

# Initialize lists to hold the angle values over time
servo_angles = [[] for _ in range(8)]

# Calculate angle positions for each servo over time
for i in range(8):
    if i in [1, 3, 5, 7]:  # Servos that move in the opposite direction initially
        servo_angles[i] = home_positions[i] + np.sin(t) * movement_ranges[i]
    else:
        servo_angles[i] = home_positions[i] + np.sin(t) * movement_ranges[i]

# Plotting
fig, axs = plt.subplots(4, 2, figsize=(10, 8))
fig.suptitle('Servo Movement Angles Over Time')

for i, ax in enumerate(axs.flatten()):
    ax.plot(t, servo_angles[i])
    ax.set_title(f'Servo {i+1}')
    ax.set_xlabel('Time (radians)')
    ax.set_ylabel('Angle (degrees)')
    ax.grid(True)

plt.tight_layout(rect=[0, 0.03, 1, 0.95])
plt.show()
